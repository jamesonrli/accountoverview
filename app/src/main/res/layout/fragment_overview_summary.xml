<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.jamesonli.accountview.ui.summary.OverviewSummaryFragment">

    <TextView
        android:id="@+id/summary_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/summary_label_font_size"
        android:layout_marginBottom="@dimen/summary_date_margin_bottom" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/summary_label_font_size"
            android:text="@string/balance_summary_label_text" />

        <TextView
            android:id="@+id/summary_balance_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/summary_label_font_size"
            android:layout_marginLeft="@dimen/summary_balance_amount_margin_left" />

    </LinearLayout>

</LinearLayout>
